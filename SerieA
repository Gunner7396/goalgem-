<script>
function analizEtSerieA() {
    // Verileri çek
    const evNpxG = parseFloat(document.getElementById('ev_npxG').value) || 0;
    const depNpxG = parseFloat(document.getElementById('dep_npxG').value) || 0;
    const evNpxGA = parseFloat(document.getElementById('ev_npxGA').value) || 0;
    const depNpxGA = parseFloat(document.getElementById('dep_npxGA').value) || 0;
    const evG_xG = parseFloat(document.getElementById('ev_G_xG').value) || 0;
    const depG_xG = parseFloat(document.getElementById('dep_G_xG').value) || 0;
    const toplamPrg = (parseFloat(document.getElementById('ev_Prg').value) || 0) + (parseFloat(document.getElementById('dep_Prg').value) || 0);
    const evLine = parseFloat(document.getElementById('ev_Line').value) || 0;
    const depLine = parseFloat(document.getElementById('dep_Line').value) || 0;

    let puan = 0;

    // 1. SERIE A EŞİĞİ (npxG)
    const toplamNpxG = evNpxG + depNpxG;
    if (toplamNpxG >= 1.95) puan += 40;
    else if (toplamNpxG >= 1.70) puan += 20;

    // 2. TAKTİKSEL HATA (npxGA & Def. Line)
    // İtalya'da bir takımın kalesinde 1.4+ npxGA vermesi büyük risktir.
    if (evNpxGA > 1.4 || depNpxGA > 1.4) puan += 20;
    if (evLine > 45 || depLine > 45) puan += 10;

    // 3. İLERLEME VE BİTİRİCİLİK
    if (toplamPrg >= 85) puan += 20;
    if ((evG_xG + depG_xG) > 0.1) puan += 10;

    // Sonuçları Yazdır
    document.getElementById('ust_sonuc').innerText = "%" + Math.min(puan, 100);
    document.getElementById('favori_notu').innerText = puan >= 80 ? "GÜÇLÜ ÜST" : (puan >= 50 ? "PLASE" : "RİSKLİ");
}
</script>

